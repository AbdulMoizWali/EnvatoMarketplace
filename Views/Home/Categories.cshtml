@model IEnumerable<EnvatoMarketplace.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.catName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentCategory.catName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.catName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentCategory.catName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.catid }) |
            @Html.ActionLink("Details", "Details", new { id=item.catid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.catid })
        </td>
    </tr>
}

</table>
