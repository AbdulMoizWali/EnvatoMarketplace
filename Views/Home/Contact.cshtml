
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Home/_Landing_Layout.cshtml";
}

<section style="height: 80vh;" class="text-gray-400 body-font relative disabled:outline">

    <div class="absolute inset-0 disabled:outline">
        <!-- <iframe title="map" width="100%" height="100%" frameborder="0" marginheight="0" marginwidth="0" scrolling="no" src="https://maps.google.com/maps?width=100%&height=600" style="filter: grayscale(0.1) contrast(1.2) opacity(0.46);"></iframe> -->
        <iframe title="map" width="100%" height="100%" frameBorder="0" marginheight="0" marginwidth="0" scrolling="no" src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d452.512293035549!2d67.06998981408616!3d24.860490527629857!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1704993380381!5m2!1sen!2s" style="filter: grayscale(0.0) contrast(1.2) opacity(0.75);"></iframe>
    </div>
    <form id="contactForm" class="container px-5 py-24 mx-auto flex" action="https://formspree.io/f/mwkgpvbz" method="POST" enctype="multipart/form-data">
        <div class="lg:w-1/3 md:w-1/2 bg-gray-900 shadow-md rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10">
            <h2 class="text-white text-lg mb-1 font-medium title-font">Contact</h2>
            <p class="leading-relaxed mb-5">Contact us from here we will soon give you a reply</p>
            <div class="relative mb-4">
                <label for="name" class="leading-7 text-sm text-gray-400">Name</label>
                <input type="text" id="name" name="name" class="w-full bg-gray-800 rounded border border-gray-700 focus:border-amber-200 focus:ring-2 focus:ring-red-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="relative mb-4">
                <label for="email" class="leading-7 text-sm text-gray-400">Email</label>
                <input type="email" id="email" name="email" class="w-full bg-gray-800 rounded border border-gray-700 focus:border-amber-200 focus:ring-2 focus:ring-red-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            </div>
            <div class="relative mb-4">
                <label for="message" class="leading-7 text-sm text-gray-400">Message</label>
                <textarea id="message" name="message" class="w-full bg-gray-800 rounded border border-gray-700 focus:border-amber-200 focus:ring-2 focus:ring-red-900 h-32 text-base outline-none text-gray-100 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
            </div>
            <button id="send" type="submit" style="background-color: #6b21a8; color: #ffffff; font-weight: bold;" class="text-white bg-red-500 border-0 py-2 px-6 focus:outline-none hover:bg-red-600 rounded text-lg">Send</button>
            <p class="text-xs text-gray-400 text-opacity-90 mt-3">* Reply will be within 1-2 days</p>
        </div>
    </form>
</section>
