                        <!--/ Transactions -->
                        <!-- Data Tables -->
                        <div class="col-12">
                            <div class="card">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="text-truncate">User</th>
                                                <th class="text-truncate">Username</th>
                                                <th class="text-truncate">Role</th>
                                                <th class="text-truncate">Date of joining</th>
                                                <th class="text-truncate">Phone</th>
                                                <th class="text-truncate">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var user in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="avatar avatar-sm me-3">
                                                                <img src="~/Content/Admin/assets/img/avatars/@(user.rid).png" alt="Avatar" class="rounded-circle" />
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0 text-truncate">@user.name</h6>
                                                                <!-- You can add other user details here -->
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-truncate">@user.username</td>
                                                    <td class="text-truncate">
                                                        @if (user.rid == 1)
                                                        {
                                                            <i class="mdi mdi-laptop mdi-24px text-danger me-1">Admin</i>
                                                        }
                                                        else if (user.rid == 2)
                                                        {
                                                            <i class="mdi mdi-pencil-outline text-info mdi-24px me-1">Vendor</i>
                                                        }
                                                        else if (user.rid == 3)
                                                        {
                                                            <i class="mdi mdi-chart-donut mdi-24px text-success me-1">Customer</i>
                                                        }
                                                        <!-- Add more roles as needed -->
                                                    </td>
                                                    <td class="text-truncate">
                                                        @user.doj
                                                    </td>
                                                    <td class="text-truncate">@user.phone</td>
                                                    <td>
                                                        @if (user != null && user.accountStatus != null)
                                                        {
                                                            if (user.accountStatus.ToString() == "TRUE")
                                                            {
                                                                <span class="badge bg-label-success rounded-pill">Active</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-label-secondary rounded-pill">Inactive</span>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-label-secondary rounded-pill">null</span>
                                                        }
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!--/ Data Tables -->


