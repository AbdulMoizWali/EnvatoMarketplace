            <div class="col-12 mt-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add New Category</h5>
                        @using (Html.BeginForm("AddCategories", "Admin", FormMethod.Post))
                        {
                            <div class="mb-3">
                                @Html.LabelFor(model => model.NewCategory.catName, "Category Name")
                                @Html.TextBoxFor(model => model.NewCategory.catName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NewCategory, "", new { @class = "text-red-600" })
                            </div>


                            <div class="mb-3">
                                @Html.LabelFor(model => model.NewCategory.pcatid, "Parent Category")
                                @Html.DropDownListFor(model => model.NewCategory.pcatid, Model.ParentCategories, "-- Select Parent Category --", new { @class = "form-control" })
                            </div>

                            <button type="submit" class="btn btn-primary">Add Category</button>
                        }
                    </div>
                </div>
            </div>
            <!-- Display existing categories -->
            <div class="col-12">
                <div class="card">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th class="text-truncate">Category ID</th>
                                    <th class="text-truncate">Category Name</th>
                                    <th class="text-truncate">Parent Category</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.Categories)
                                {
                                    <tr>
                                        <td>@category.catid</td>
                                        <td>@category.catName</td>
                                        <td>@category.pcatid</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
